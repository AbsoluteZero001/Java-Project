<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.springboot.mapper.RoomMapper">

    <!-- 分页查询房屋信息 -->
    <select id="findAllRoom" resultType="com.springboot.springboot.pojo.Room">
        SELECT *
        FROM room
        <where>
            <if test="number != null and number != ''">
                room_code LIKE CONCAT('%', #{number}, '%')
            </if>
        </where>
    </select>

</mapper>
