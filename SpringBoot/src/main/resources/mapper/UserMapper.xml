<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.springboot.mapper.UserMapper">

    <!-- 通用映射：数据库 userid -> 实体类 id -->
    <resultMap id="UserResultMap" type="com.springboot.springboot.pojo.user.User">
        <id property="id" column="userid"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="account" column="account"/>
        <result property="idcard" column="idcard"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="userType" column="user_type"/>
        <result property="userStatus" column="user_status"/>
        <result property="userRoomid" column="user_roomid"/>
    </resultMap>

    <!-- 插入用户，回填主键到 User.id -->
    <insert id="insertUser" parameterType="com.springboot.springboot.pojo.user.User"
            useGeneratedKeys="true" keyProperty="id" keyColumn="userid">
        INSERT INTO user(username, password, account, idcard, gender)
        VALUES(#{username}, #{password}, #{account}, #{idcard}, #{gender})
    </insert>

    <!-- 动态条件查询用户 -->
    <select id="queryOnCondition" parameterType="com.springboot.springboot.pojo.user.User"
            resultMap="UserResultMap">
        SELECT *
        FROM user
        <where>
            <if test="id != null"> AND userid = #{id} </if>
            <if test="username != null and username != ''"> AND username = #{username} </if>
            <if test="password != null and password != ''"> AND password = #{password} </if>
            <if test="account != null and account != ''"> AND account = #{account} </if>
            <if test="idcard != null and idcard != ''"> AND idcard = #{idcard} </if>
            <if test="gender != null"> AND gender = #{gender} </if>
            <if test="age != null"> AND age = #{age} </if>
            <if test="userType != null"> AND user_type = #{userType} </if>
            <if test="userStatus != null"> AND user_status = #{userStatus} </if>
            <if test="userRoomid != null"> AND user_roomid = #{userRoomid} </if>
        </where>
    </select>

    <!-- 根据类型和条件分页查询用户 -->
    <select id="findUsersByType" resultMap="UserResultMap">
        SELECT *
        FROM user
        WHERE user_type = #{userType}
        <if test="condition != null and condition != ''">
            AND (username LIKE CONCAT('%', #{condition}, '%')
            OR idcard LIKE CONCAT('%', #{condition}, '%'))
        </if>
    </select>

    <!-- 根据 ID 查询用户 -->
    <select id="selectById" parameterType="int" resultMap="UserResultMap">
        SELECT *
        FROM user
        WHERE userid = #{id}
    </select>

</mapper>
