<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.springboot2.mapper.FreightBasisMapper">

    <!-- 查询全部费率基础信息 -->
    <select id="findAll" resultType="com.springboot.springboot2.pojo.FreightBasis">
        SELECT
            freight_basis_id AS freightBasisId,
            basis_name AS basisName,
            price,
            intro
        FROM freight_basis
    </select>

    <!-- 根据 ID 动态更新费用说明 -->
    <update id="updateById" parameterType="com.springboot.springboot2.pojo.FreightBasis">
        <!-- 防止空 SET 报错，先判断至少有一个字段不为空 -->
        <if test="price != null or (intro != null and intro != '') or (basisName != null and basisName != '')">
            UPDATE freight_basis
            <set>
                <if test="price != null">
                    price = #{price},
                </if>
                <if test="intro != null and intro != ''">
                    intro = #{intro},
                </if>
                <if test="basisName != null and basisName != ''">
                    basis_name = #{basisName},
                </if>
            </set>
            WHERE freight_basis_id = #{freightBasisId}
        </if>
    </update>

</mapper>
